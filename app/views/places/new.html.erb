
  <div class="container mt-4">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="place-form">
          <h1>Ajouter un lieu</h1>
          <div class="mt-3">
            <%= form_for(@place) do |f| %>
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :address %>
                <%= f.text_field :address, class: 'form-control' %>
              </div>
               <div class="form-group">
                <%= f.label :photo %>
                <%= f.text_field :photo, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :party_type %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :string, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :guest_capacity %>
                <%= f.number_field :guest_capacity, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, class: 'form-control' %>
              </div>
              <div class="mt-3">
                <%= f.submit class: 'btn btn-primary' %>
                <%= link_to 'Cancel', '#', class: 'btn btn-danger ml-2' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
