<div class="place-container mt-3">

<!-- query -->


      <div class="ml-auto flex">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Chercher</button>
        </form>
      </div>


<!--   Results query -->

  <div class="row">
    <div class="col">
      <p>Vous avez cherchez <strong><%= @query %></strong>. Nous avons trouvé <%= @places.count %> résultats sur un total de <%= Place.count %> lieux sur notre plateforme.</p>
    </div>
  </div>


<!-- Display cards  -->

  <div class="row">
    <% @places.first(8).each do |place| %>
      <div class="col-3 px-2">
        <div class="place-card">
          <div class="place-card-image" style="background-image: url('<%= place.photo %>')"></div>
          <div class="place-card-content pt-2">
            <div class="place-card-title d-flex align-items-center mb-0 pb-0">
              <h4><%= place.name.upcase %></h4>
              <span class="point px-1 pb-2"> · </span>
              <h4>PARIS 11</h4>
            </div>
            <p class="mb-0"><%= place.name %></p>
            <div class="place-card-votes d-flex justify-content-start pt-1">
              <%= render 'shared/stars' %>
              <div class="votes pl-1 d-flex justify-content-start">
                <p>110</p>
                <span class="point px-1 pb-2"> · </span>
                <p>SuperApéro</p>
              </div>
